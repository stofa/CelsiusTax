@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CelsiusTax</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CEL Tax</a>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">@Localizer["Language"] <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="ChangeLanguage" asp-action="Index" asp-route-language="en">EN</a></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="ChangeLanguage" asp-action="Index" asp-route-language="de-de">DE</a></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="ChangeLanguage" asp-action="Index" asp-route-language="de-ch">DE (Schweiz)</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted d-print-none">
        <div class="container">
            &copy; @DateTime.Now.Year - CEL Tax - This <a href="https://github.com/stofa/CelsiusTax" target="_blank">app</a> is made with ♥ by <a href="https://t.me/fabu1" target="_blank">Fä bu</a> and has nothing todo with the celsius.network company
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
